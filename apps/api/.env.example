# Visual Social Graph API - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================
# REQUIRED
# ============================================================

# Node environment (development | production | test)
NODE_ENV=development

# Server port
PORT=3001

# PostgreSQL database URL
DATABASE_URL="postgresql://user:password@localhost:5432/vsg?schema=public"

# JWT secret (min 32 characters) - generate with: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters

# Magic link secret (min 32 characters) - generate with: openssl rand -hex 32
MAGIC_LINK_SECRET=your-super-secret-magic-link-key-min-32-chars

# ============================================================
# OPTIONAL - Redis (enables caching, rate limiting, job queue)
# ============================================================

# Redis URL
REDIS_URL=redis://localhost:6379

# ============================================================
# OPTIONAL - Google OAuth
# ============================================================

# Google OAuth credentials (from Google Cloud Console)
# GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
# GOOGLE_CLIENT_SECRET=your-google-client-secret
# GOOGLE_CALLBACK_URL=http://localhost:5173/auth/google/callback

# ============================================================
# OPTIONAL - Email (Resend)
# ============================================================

# Resend API key (for sending magic link emails)
# RESEND_API_KEY=re_xxxxxxxxxxxxx
# EMAIL_FROM=noreply@yourdomain.com

# ============================================================
# OPTIONAL - Stripe (Payments)
# ============================================================

# Stripe API keys
# STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxx
# STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxx
# STRIPE_PRICE_PRO=price_xxxxxxxxxxxxx
# STRIPE_PRICE_CREATOR=price_xxxxxxxxxxxxx

# ============================================================
# OPTIONAL - Storage (Cloudflare R2)
# ============================================================

# Cloudflare R2 (S3-compatible storage)
# R2_ACCOUNT_ID=your-account-id
# R2_ACCESS_KEY_ID=your-access-key
# R2_SECRET_ACCESS_KEY=your-secret-key
# R2_BUCKET_NAME=vsg-uploads
# R2_PUBLIC_URL=https://your-bucket.r2.dev

# ============================================================
# CONFIGURATION
# ============================================================

# CORS origin (comma-separated for multiple)
CORS_ORIGIN=http://localhost:5173

# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# JWT expiration
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=30d
MAGIC_LINK_EXPIRES_IN=15m

# Logging level (fatal | error | warn | info | debug | trace)
LOG_LEVEL=info
